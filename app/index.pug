doctype html
html(lang="en",ng-app="app",ng-hint)
  head
    meta(charset="utf-8")
    meta(name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width")
    // build:css(app) styles/vendor.css
    // bower:css
    link(rel='stylesheet', href='bower_components/yasgui-yasqe/dist/yasqe.css')
    link(rel='stylesheet', href='bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet', href='bower_components/angular-hotkeys/build/hotkeys.css')
    // endbower
    link(rel='stylesheet', href='bower_components/yasgui-yasqe/dist/yasqe.css')
    // endbuild
    // build:css(.tmp) styles/main.css
    link(rel="stylesheet" href="styles/main.css")
    // endbuild

    title Khepri
  body
    .modal(ng-class="authOpen ? 'modal-open fade in' : ''",ng-style="authOpen ? {display:'block'} : {}"): .modal-dialog(ng-show="authOpen"): form.modal-content
      .modal-header: h4.modal-title Authentication required
      .modal-body
        .form-group
          label Username:
          input.form-control(type='text', ng-model="username")
        .form-group
          label Password:
          input.form-control(type='password', ng-model="password")
      .modal-footer
          button.btn.btn-success(ng-click="setAuth()") Ok
          button.btn.btn-danger(ng-click="dismissAuth()") Cancel
    script(src="https://www.google.com/jsapi")
    script(type="text/javascript").
      google.load('visualization', '1', {'packages':['corechart']});
    // build:js(app) scripts/vendor.js
    // bower:js
    script(src='bower_components/angular/angular.js')
    script(src='bower_components/jquery/dist/jquery.js')
    script(src='bower_components/angular-ui-router/release/angular-ui-router.js')
    script(src='bower_components/angular-sparql-service/dist/sparql-service.js')
    script(src='bower_components/ngstorage/ngStorage.js')
    script(src='bower_components/angular-http-auth/src/http-auth-interceptor.js')
    script(src='bower_components/yasgui-yasqe/dist/yasqe.bundled.js')
    script(src='bower_components/angular-bootstrap/ui-bootstrap-tpls.js')
    script(src='bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='bower_components/angular-hotkeys/build/hotkeys.js')
    script(src='bower_components/angular-utf8-base64/angular-utf8-base64.js')
    script(src='bower_components/ng-resize/index.js')
    // endbower
    // endbuild

    // build:js(.tmp) scripts/main.js
    script(src="scripts/app.js")
    script(src="scripts/config-service.js")
    script(src="scripts/state-service.js")
    script(src="scripts/textsearchview-directive.js")
    script(src="scripts/resultlistview-directive.js")
    script(src="scripts/treeview-directive.js")
    script(src="scripts/googlechartview-directive.js")
    script(src="scripts/multitreeviews-directive.js")
    script(src="scripts/multigooglechartviews-directive.js")
    script(type="text/javascript").
      var config = window.location.hash.replace(/.*\?/,'');
      if (config === '' || config.charAt(0) === '#') config = 'ceec-config.js';
      document.write('<script src="scripts/'+config+'"></scr'+'ipt>');
    // inject:partials
    // endinject
    // endbuild
    main(ui-view="")
    .uib-modal-backdrop.fade.in(ng-show="authOpen")
